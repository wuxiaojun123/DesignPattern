<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxj.datastructure.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/id_tv_http"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="网络请求框架" />

        <TextView
            android:id="@+id/id_tv_aspectj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="AOP之AspectJ的使用" />

        <TextView
            android:id="@+id/id_tv_constraint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="constraintLayout的使用" />

        <TextView
            android:id="@+id/id_tv_event_bus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="eventbus的使用" />

        <com.wxj.datastructure.view.MyCardView
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/colorAccent" />

        </com.wxj.datastructure.view.MyCardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
